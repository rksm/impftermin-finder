{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
